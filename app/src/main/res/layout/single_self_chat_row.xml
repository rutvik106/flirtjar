<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_chatMessageContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:gravity="right"
    tools:ignore="RtlHardcoded">

    <RelativeLayout
        android:id="@+id/rl_messageContentContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/chat_bubble_self"
        android:paddingBottom="12dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_chatUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:textColor="#f1f1f1"
            tools:text="User 2"/>

        <TextView
            android:id="@+id/tv_chatBodyContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_chatUserName"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:maxWidth="250dp"
            android:textColor="#ffffff"
            android:textSize="16sp"
            tools:text="Test message"/>

    </RelativeLayout>

</LinearLayout>