<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="#DEF2FB"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_notificationIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            tools:src="@drawable/ic_like_gradient"/>

        <TextView
            android:id="@+id/tv_notificationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="1dp"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="Congratulations, you have got 1 free flirtcoin. Tap to claim"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_notificationTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:lineSpacingExtra="1dp"
        android:textColor="#dd999999"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="18 Seconds Ago"/>

</LinearLayout>